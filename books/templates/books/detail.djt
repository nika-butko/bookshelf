{# Load the tag library #}
{% load bootstrap3 %}

{# Load CSS and JavaScript #}
{% bootstrap_css %}
{% bootstrap_javascript %}

{# Display django.contrib.messages as Bootstrap alerts #}
{% bootstrap_messages %}

<div class="container">  

    <h1>{{ book.title }}</h1>
 
    <p>{{ book.authors.all|join:", " }}</p>
       
    <p>{{ book.series.all|join:", " }}</p>

    <p>{{ book.teaser }}</p>
    <p>{{ book.description }}</p>
</div><!-- /.container -->
