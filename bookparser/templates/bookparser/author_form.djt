{% extends 'base.djt' %}
{% load bootstrap3 %}

{% block content %}
<div class="container">
    <div class="col-md-12">
        <form action="" method="post" class="form">
            {% csrf_token %}
            {% bootstrap_form form %}
            {% buttons %}
                <button type="submit" class="btn btn-primary">
                    {% bootstrap_icon "star" %} Submit
                </button>
            {% endbuttons %}
        </form>
    </div>
</div>
{% endblock %}